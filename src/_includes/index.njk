<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/styles/critical.css" rel="stylesheet" type="text/css" inline>
    <title>{{ title }}</title>
  </head>
  <body>
    {% block content %}
      {{ content | safe }}
      <h2>Latests notes</h2>
      <ul>
        {%- for note in collections.note -%}
          <li>{{ note.data.title }}</li>
        {%- endfor -%}
      </ul>
    {% endblock %}
    <link href="/styles/global.css" rel="stylesheet" type="text/css">
  </body>
</html>